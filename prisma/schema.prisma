generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ToDoList {
  id     Int        @id @default(autoincrement())
  title  String
  todo   String?
  status ToDoStatus @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

enum ToDoStatus {
  CANCELED
  DONE
  PENDING
}
